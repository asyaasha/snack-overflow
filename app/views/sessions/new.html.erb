<h1>Log In</h1>
<% if @errors %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@errors.count, "errors") %> prohibited this article from being saved:
    </h2>
    <ul>
      <% @errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :session, url: sessions_path do |f| %>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Log In" %>
  </p>
<% end %>
